<style type="text/css">
    body {
        padding-top: 60px !important;
    }
    .menu {
        position: fixed;
        top: 0;
        left: 0;
        width: 100vw;
        display: flex;
        flex-direction: row;
        justify-content: flex-start;
        align-items: center;
        height: 60px;
        z-index: 80;
        background: white;
        user-select: none;
    }
    .menu-box-icon {
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center;
        width: 60px;
        height: 60px;
        color: black;
        font-size: 24px;
        cursor: pointer;
    }
    .menu-box-name {
        font-size: 20px;
        font-weight: bold;
        padding-left: 10px;
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center;
        height: 60px;
    }
    .side-blur {
        position: fixed;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        background-color: rgba(0, 0, 0, 0.5);
        backdrop-filter: blur(5px);
        z-index: 70;
        user-select: none;
        display: none;
    }
    #menu-box {
        display: none;
    }
    #menu-control-status:click {
        user-select: none;
    }
    .side-menu {
        position: fixed;
        top: 0;
        left: 0;
        width: 300px;
        height: 100vh;
        background-color: white;
        z-index: 75;
        box-sizing: border-box;
        padding-top: 60px;
    }
    .menu-option-box {
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
        align-items: flex-start;
    }
    .menu-option-box-title {
        font-size: 20px;
        font-weight: bold;
        padding-top: 10px;
        padding-bottom: 10px;
        padding-left: 10px;
    }
    .menu-option-box-field {
        font-size: 16px;
        padding-top: 5px;
        padding-bottom: 5px;
        padding-left: 20px;
    }
</style>


<div class="menu">
    <div class="menu-box-icon" id="menu-control-status">
        <i class="fa-solid fa-bars"></i>
    </div>
    <div class="menu-box-name">
        PollEd
    </div>
</div>

<div class="side-blur" id="menu-box">
    <div class="side-menu">
        <div class="menu-option-box">
            <div class="menu-option-box-title">
                Opzioni
            </div>
            <div class="menu-option-box-field">
                Crea un sondaggio
            </div>
            <div class="menu-option-box-field">
                I miei sondaggi
            </div>
        </div>
        <div class="menu-option-box">
            <div class="menu-option-box-title">
                Account
            </div>
            <div class="menu-option-box-field">
                Il mio profilo
            </div>
            <div class="menu-option-box-field">
                Logout
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    var menu_open = false;
    document.getElementById('menu-control-status').addEventListener('click', function() {
        console.log('Menu clicked');
        if (menu_open) {
            document.getElementById('menu-box').style.display = 'none';
            document.getElementById('menu-control-status').innerHTML = `<i class="fa-solid fa-bars"></i>`
            menu_open = false;
        } else {
            document.getElementById('menu-box').style.display = 'block';
            document.getElementById('menu-control-status').innerHTML = `<i class="fa-solid fa-times"></i>`
            menu_open = true;
        }
    });
</script>