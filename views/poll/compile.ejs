<!DOCTYPE html>
<html>

<head>
    <title>
        <%= title %>
    </title>

    <%- include('../partials/common_head.ejs') %>

    <style type="text/css">
        .compile-answer input {
            width: 45px;
            display: block;
        }
    </style>

    <% if (multiple_choice) { %>
        <link rel="stylesheet" type="text/css" href="/static/compile/multiple_choice.css" />
        <% } else { %>
            <link rel="stylesheet" type="text/css" href="/static/compile/single_choice.css" />
            <% } %>
</head>

<body>
    <%- include('../partials/menu.ejs') %>

        <style type="text/css">
            .poll-body {
                width: 100vw;
                max-width: 100%;
                overflow-x: hidden;
                margin-top: 30px;
                display: flex;
                flex-direction: column;
                justify-content: flex-start;
                align-items: center;
                gap: 40px;
            }

            .poll-body form {
                width: 100%;
                display: flex;
                flex-direction: column;
                justify-content: flex-start;
                align-items: center;
                max-width: 600px;
                gap: 40px;
            }

            .compile-title {
                font-size: var(--text-xl);
                font-weight: var(--text-normal);
                text-align: center;
                width: 90%;
                text-align: center;
                padding: 40px 20px;
                max-width: 500px;
                color: var(--black-color);
                border: solid 1px var(--black-color);
                border-radius: 5px;
                position: relative;
                box-sizing: border-box;
                z-index: 6;
            }

            .compile-title::before {
                content: '\f10d';
                font-family: 'FontAwesome';
                font-size: 48px;
                line-height: 1;
                color: var(--black-color);
                display: block;
                position: absolute;
                top: -6px;
                left: -6px;
                z-index: 8;
                background: var(--gray-color);
            }

            .compile-title::after {
                content: '\f10e';
                font-family: 'FontAwesome';
                font-size: 48px;
                line-height: 1;
                color: var(--black-color);
                display: block;
                position: absolute;
                bottom: -6px;
                right: -6px;
                background: var(--gray-color);
                z-index: 8;
            }

            .compile-answer {
                display: flex;
                flex-direction: row;
                justify-content: flex-start;
                align-items: center;
                gap: 10px;
                width: 90%;
                padding: 30px 0;
                border: 1px solid var(--black-color);
                border-radius: 5px;
                max-width: 500px;
                box-sizing: border-box;
                padding-left: 20px;
            }

            .compile-answer label {
                font-size: var(--text-l);
                font-weight: var(--text-light);
                display: block;
                flex-grow: 1;
            }

            .compile-submit {
                display: flex;
                flex-direction: column;
                justify-content: center;
                align-items: center;
                gap: 10px;
                width: 100%;
            }

            .poll-body .compile-submit button {
                font-size: 1.6em;
                font-weight: var(--text-bold);
                line-height: 1;
                padding: 20px 0;
                border: none;
                border-radius: 5px;
                background-color: var(--blue-color);
                color: var(--gray-color);
                cursor: pointer;
                transition: background-color 0.3s;
                width: 100%;
                max-width: 210px;
            }

            .poll-body .compile-submit button:disabled {
                opacity: 0.5;
                cursor: not-allowed;
            }

            .input-checked {
                background: var(--black-color);
                color: var(--gray-color);
            }

            .info-box.warning {
                background: var(--yellow-color);
                color: var(--dark-gray-color);
            }

            .info-box.error {
                background: var(--red-color);
                color: var(--dark-gray-color);
            }

            .info-box {
                width: 100%;
                max-width: 400px;
                display: flex;
                flex-direction: row;
                justify-content: center;
                align-items: center;
                gap: 10px;
            }

            .info-box .icon {
                flex-basis: 60px;
                flex-grow: 0;
                flex-shrink: 0;
                display: flex;
                justify-content: center;
                align-items: center;
                font-size: var(--text-size-xl)
            }

            .info-box .text {
                flex-grow: 1;
                flex-shrink: 0;
                flex-basis: 0;
                box-sizing: border-box;
                vertical-align: middle;
                text-align: center;
                font-size: var(--text-size-xs);
                font-weight: var(--text-normal);
                padding: 21px 15px;
                box-sizing: border-box;
            }
        </style>

        <div class="poll-body">
            <% if(time_status=='available'&&!anonymous) { %>
            <div class="info-box warning">
                <div class="icon">
                    <i class="fa-solid fa-triangle-exclamation"></i>
                </div>
                <div class="text">
                    La compilazione di questo voto non &egrave; anonima, pertanto il voto che darai potr&agrave; essere associato al tuo account.
                </div>
            </div>
            <% } %>
            <% if(time_status!='available') { %>
            <div class="info-box error">
                <div class="icon">
                    <% if(time_status=='expired') { %>
                        <i class="fa-solid fa-hourglass-end"></i>
                        <% } else { %>
                            <i class="fa-solid fa-hourglass"></i>
                            <% } %>
                </div>
                <div class="text">
                    <% if(time_status=='expired') { %>
                    Questo sondaggio &egrave; scaduto e non &egrave; possibile inviare nuovi voti.
                    <% } else { %>
                    Questo sondaggio non &egrave; ancora disponibile per la compilazione.
                    <% } %>
                </div>
            </div>
            <% } %>
            <% if (time_status=='available'&&is_author) { %>
            <div class="info-box warning">
                <div class="icon">
                    <i class="fa-solid fa-triangle-exclamation"></i>
                </div>
                <div class="text">
                    Sei l'autore di questo sondaggio, pertanto non ti &egrave; permesso votare.
                </div>
            </div>
            <% } %>
            <% if (time_status=='available'&&has_reported) { %>
            <div class="info-box error">
                <div class="icon">
                    <i class="fa-solid fa-triangle-exclamation"></i>
                </div>
                <div class="text">
                    Hai segnalato questo sondaggio, pertanto non ti &egrave; permesso votare.
                </div>
            </div>
            <% } %>
            <% if (time_status=='available'&&!has_right_to_vote) { %>
            <div class="info-box error">
                <div class="icon">
                    <i class="fa-solid fa-triangle-exclamation"></i>
                </div>
                <div class="text">
                    Non hai i permessi per votare su questo sondaggio.
                </div>
            </div>
            <% } %>
            <% if (time_status=='available'&&has_voted) { %>
            <div class="info-box error">
                <div class="icon">
                    <i class="fa-solid fa-triangle-exclamation"></i>
                </div>
                <div class="text">
                    Hai gi&agrave; votato su questo sondaggio.
                </div>
            </div>
            <% } %>
            <div class="compile-title">
                <%= description %>
            </div>
            <form method="POST">
                <input type="hidden" name="poll_id" value="<%= id %>" />
                <% for (let i=0; i < options.length; i++) { %>
                    <div class="compile-answer" id="box-<%= i %>">
                        <% if (multiple_choice) { %>
                            <input type="checkbox" name="answer" value=<%=options[i]["index"] %> id="input-<%= options[i]["index"] %>" />
                        <% } else { %>
                            <input type="radio" name="answer" value=<%=options[i]["index"] %> id="input-<%=options[i]["index"] %>" />
                        <% } %>
                        <label for=<%=`input-${options[i]["index"]}` %>><%= options[i]["text"] %>
                        </label>
                    </div>
                    <% } %>
                    <% if (time_status=='available'&&!is_author&&!has_reported&&has_right_to_vote&&!has_voted) { %>
                        <div class="compile-submit">
                            <button type="submit" disabled="true">
                                <i class="fa-solid fa-signature"></i>
                                Invia
                            </button>
                        </div>
                    <% } %>
            </form>
        </div>

        <script type="text/javascript">

            /**
             * The following piece of code is used to make sure that 
             * only one click event is triggered at a time.
             * Look at the hierarchy of div.compile-answer and input[type="radio"]
             * If input[type="radio"] is clicked, then 2 event are dispatched
             * 1. click of div.compile-answer
             * 2. click of input[type="radio"]
             * The following piece of code make sure that only 1 click event is
             * dispatched at a time
             */
            var input_type = '<%= multiple_choice ? "checkbox" : "radio" %>';
            console.log(input_type)
            var checkboxes = document.querySelectorAll(`input[type="${input_type}"]`);
            console.log(checkboxes)

            var boxes = document.querySelectorAll('.compile-answer');
            console.log(boxes)

            function addClickEvent(iid, boxid) {
                document.getElementById(boxid).addEventListener('click', (e) => {
                    console.log(e)
                    console.log("click from outside")
                    e.stopPropagation();
                    document.getElementById(iid).checked = !document.getElementById(iid).checked;
                    const event = new Event('change');
                    document.getElementById(iid).dispatchEvent(event);
                })
                document.getElementById(iid).addEventListener('click', (e) => {
                    console.log(e)
                    console.log("click from inside")
                    e.stopPropagation();
                    console.log(document.getElementById(iid).checked)
                    //document.getElementById(iid).checked = !document.getElementById(iid).checked;
                    const event = new Event('change');
                    document.getElementById(iid).dispatchEvent(event);
                })
            }

            for (var i = 0; i < boxes.length; i++) {
                var iid = `input-${i}`;
                var boxid = `box-${i}`;
                addClickEvent(iid, boxid);
            }
            var stateList = []
            checkboxes.forEach(function (checkbox) {
                checkbox.addEventListener('change', function (e) {
                    console.log("Event dispatched")
                    stateList = []
                    checkboxes.forEach(function (c) {
                        console.log(c.checked)
                        stateList.push(c.checked)
                        if (!c.checked)
                            c.parentElement.classList.remove('input-checked');
                        else
                            c.parentElement.classList.add('input-checked');
                        setButtonState();
                    });

                });
            });

            function setButtonState() {
                var enabled = false;
                stateList.forEach(function (state) {
                    enabled = enabled || state;
                })
                //console.log(enabled)
                document.querySelector('.compile-submit button').disabled = !enabled;
            }
        </script>

</body>

</html>